<div id="flash_message">
    <% if flash.include?(:message) %>
        <%= flash[:message] %>
    <% end %>
</div>
<div>
    <ul>   <br><br>
        
            <label><li><%=@workout.category%>
            <%=@workout.date_printed(@workout.date)%></li> </label>
        <ul>
        <br>
        <li>Time: <%=@workout.time%> <%=@workout.time_units%></li> 
        <%if @workout.comment != nil%>
        <li>Comments: <%=@workout.comment%></li> 
        <%end%>
        <ul>
    </ul> 
</div>
<div>
    <button onclick="window.location.href='/workouts/<%=@workout.id%>/edit';">Edit this workout</button>
</div>
<form method="post" action="/workouts/<%=@workout.id%>">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input class="submit_button" type="submit" value="Delete this workout">
</form>
