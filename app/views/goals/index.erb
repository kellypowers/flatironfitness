<div class="heading h2">
    <h2>Workouts</h2> 
</div>

<div class="index"

   <ul>
    <%@user.goals.each do |goal|%>
        <li><a href="goals/<%=goal.id%>"><%=goal.category%></a></li> </ul>
        <ul>
        <li>Date: <%=goal.date_printed%></li>
        <li>Time: <%=goal.time%> <%=goal.time_units%></li>
        <%if goal.description != nil%>
            <li> <%=goal.description%></li> 
        <%end%>
    <%end%> 
    </ul>
    
</div> 